<div class="container">
  <div class="row">

    <div class="col-12 col-md-6 py-2">
      <div class="card">
        <div class="card-header">
          <h1 class="h5">Cadastrar Professor</h1>
        </div>
        <div class="card-body">
          <form class="row" action="/professores/cadastrar" method="POST">
            <div class="form-group col-12 col-lg-6">
              <label for="nome">Nome</label>
              <input class="form-control" type="text" name="nome" placeholder="Digite seu primeiro nome" required />
            </div>
            <div class="form-group col-12 col-lg-6">
              <label for="nome">Sobrenome</label>
              <input class="form-control" type="text" name="sobrenome" placeholder="Digite seu sobrenome" required />
            </div>
            <div class="col-12">
              <button class="btn btn-block btn-primary" type="submit">Cadastrar</button>
            </div>
          </form>

        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 py-2">
      <div class="card">
        <div class="card-header">
          <h1 class="h5">Lista de Professores</h1>
        </div>
        <div class="card-body p-0">
          <table class="table table-bordered table-striped m-0">
            <thead>
              <tr>
                <th scope="col">Primeiro nome</th>
                <th scope="col">Sobrenome</th>
              </tr>
            </thead>
            <tbody>
              <!-- Listagem de professores -->
              {{#each professores}}
              <tr>
                <td>{{nome}}</td>
                <td>{{sobrenome}}</td>
              </tr>
              {{/each}}
              <!-- Fim da listagem de professores -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>